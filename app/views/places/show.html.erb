<h1><%= @place["name"] %></h1>

<% @posts =Post.where({"user_id" => session["user_id"],"place_id" =>@place["id"]})%>
<% if @posts.any?%>
    <h2>My Posts</h2>
    <% for post in @posts %>
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><%= post["description"] %></p>
    <% end %>
    <% else %>
    <p> You don't have any posts for this place </p>
    <%end%>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>