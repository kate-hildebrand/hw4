<h1><%= @place["name"] %></h1>

<hr class="my-4">
      <div class="col-sm-1 text-end">
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
      </div>

<% @posts =Post.where({"user_id" => session["user_id"],"place_id" =>@place["id"]})%>
<% if @posts.any?%>


<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h2><%= post["title"] %></h2>
      <h5><%= post["posted_on"] %></h5>
        <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
      <p><%= post["description"] %></p>
      
      <p><%= post["body"] %></p>
    </div>
  <% end %>
  <%else%>
  Login and click "new posts" to get started!
  <% end%>
</div>



